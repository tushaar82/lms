# Application Settings
PROJECT_NAME=Student Academics Management System
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://lms_user:lms_password@localhost:5432/lms

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://localhost:3000", "https://localhost:8000"]

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=LMS System

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=[".pdf", ".doc", ".docx", ".jpg", ".jpeg", ".png"]

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache Settings
CACHE_EXPIRE_SECONDS=3600  # 1 hour

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30  # seconds